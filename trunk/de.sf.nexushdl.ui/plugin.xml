<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.sf.nexushdl.ui.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="de.sf.nexushdl.ui.commands.category"
            id="de.sf.nexushdl.ui.commands.startBuild"
            name="Start Build">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.sf.nexushdl.ui.handlers.SampleHandler"
            commandId="de.sf.nexushdl.ui.commands.startBuild">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.sf.nexushdl.ui.commands.startBuild"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.sf.nexushdl.ui.menus.nexushdl"
               label="NexusHDL"
               mnemonic="M">
            <command
                  commandId="de.sf.nexushdl.ui.commands.startBuild"
                  id="de.sf.nexushdl.ui.menus.startBuild"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.sf.nexushdl.ui.toolbars.sampleToolbar">
            <command
                  commandId="de.sf.nexushdl.ui.commands.startBuild"
                  icon="icons/nexushdl16.gif"
                  id="de.sf.nexushdl.ui.toolbars.startBuild"
                  tooltip="Build the Chip">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.sf.nexushdl.ui.editors.SynthesisMultiPageEditor"
            contributorClass="de.sf.nexushdl.ui.editors.MultiPageEditorContributor"
            extensions="nxs"
            icon="icons/sample.gif"
            id="de.sf.nexushdl.ui.editors.SynthesisMultiPageEditor"
            name="NexusHDL Configuration">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="de.sf.nexushdl.ui"
            name="NexusHDLConfig">
      </category>
      <wizard
            category="de.sf.nexushdl.ui"
            class="de.sf.nexushdl.ui.wizards.NewNexusConfWizard"
            icon="icons/sample.gif"
            id="de.sf.nexushdl.ui.wizards.NewNexusConfWizard"
            name="NexusHDL Configuration Wizard">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="de.sf.nexushdl.ui.preferences.NexusHDLPreferencePage"
            id="de.sf.nexushdl.ui.preferences.NexusHDLPreferencePage"
            name="NexusHDL">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.sf.nexushdl.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
